<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SpbpuSchedule" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Акцентные цвета -->
        <item name="colorSecondary">@color/green_accent</item>
        <item name="colorSecondaryVariant">@color/green_primary_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Фон -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Стиль кнопок -->
        <item name="materialButtonStyle">@style/GreenButtonStyle</item>
    </style>

    <style name="GreenButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/green_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>